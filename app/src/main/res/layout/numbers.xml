<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LNumbers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bNumbers1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_weight=".25"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onClickNumbers"
            android:text="N"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bFunctions1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_weight=".25"
            android:onClick="onClickFunctions"
            android:text="F"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bSave1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_weight=".25"
            android:onClick="onClickSave"
            android:text="S"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bHistory1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:layout_weight=".25"
            android:onClick="onClickHistory"
            android:text="H"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1.5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_weight=".75"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bOpeningBracket"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickOperator"
                    android:text="("
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:tag="("/>

                <Button
                    android:id="@+id/bClosingBracket"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickOperator"
                    android:text=")"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:tag=")"/>

                <Button
                    android:id="@+id/bClear"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickClear"
                    android:text="C"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button7"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="7"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button8"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="8"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button9"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="9"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="4"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button5"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="5"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button6"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="6"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button1"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button2"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="2"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Button3"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="3"
                    android:textSize="25dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button0"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickNumber"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bComma"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickComma"
                    android:text=","
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bResult"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginRight="-3dp"
                    android:layout_weight=".25"
                    android:onClick="onClickResult"
                    android:text="="
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:tag="="/>


            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/operators"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_weight=".25" />


    </LinearLayout>
</LinearLayout>